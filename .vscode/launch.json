{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nodemon Watch File",
      "runtimeExecutable": "nodemon",
      "program": "${file}",
      "restart": true,
      "port": 9229,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeArgs": [
        "--watch",
        "${workspaceFolder}",
        "--inspect-brk=9229"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Console File",
      // по дефолту это и есть node
      // "runtimeExecutable": "node",
      "program": "${file}",
      "port": 9229,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeArgs": [
        "--inspect-brk=9229"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug file",
      "program": "${file}"
    }
  ]
}